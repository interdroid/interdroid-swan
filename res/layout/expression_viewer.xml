<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/expressionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/expandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="false" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/evalPercentage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/evalPercentageName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20" />

        <ProgressBar
            android:id="@+id/evalPercentagePB"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".55"
            android:max="100"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/evalPercentageValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/evalRate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/evalRateName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20" />

        <ProgressBar
            android:id="@+id/evalRatePB"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".55"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/evalRateValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/evalDelay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/evalDelayName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20" />

        <ProgressBar
            android:id="@+id/evalDelayPB"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".55"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/evalDelayValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/evalTimeMin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/evalTimeMinName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20" />

        <ProgressBar
            android:id="@+id/evalTimeMinPB"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".55"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/evalTimeMinValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/evalTimeMax"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/evalTimeMaxName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20" />

        <ProgressBar
            android:id="@+id/evalTimeMaxPB"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".55"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/evalTimeMaxValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/evalTimeAvg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/evalTimeAvgName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20" />

        <ProgressBar
            android:id="@+id/evalTimeAvgPB"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".55"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/evalTimeAvgValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:singleLine="true" />
    </LinearLayout>

